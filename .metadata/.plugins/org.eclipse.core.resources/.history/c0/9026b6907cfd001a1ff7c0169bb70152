package com.esisa.compiler.parser;

/*
 * Q1 Grammaire
 * 
 * A	-> for ( B ) C
 * B	-> I O R
 * I	-> id = N; | ;
 * O	-> id oprel N; | ;
 * R	-> X | Y
 * X	-> id++
 * Y	-> i--
 * N	-> id | nb
 * C	-> { L } | ;
 * L	-> A L | eps
 */
public class FORParser extends Parser {

	public FORParser() {
		getScanner().addReservedWordList("for");
	}

	//A	-> for ( B ) C
	public boolean axiom() {
		if (next("for")) {
			if (next("(")) {
				if (B()) {
					if (next(")")) {
						return C();
					}					
				}
			}
		}
		return false;
	}
	
	//B	-> I O R
	private boolean B() {
		if (I()) {
			if (O()) {
				return R();
			}
		}
		return false;
	}
	
	//R	-> X | Y
	private boolean R() {
		if (X()) {
			return true;
		}
		return Y();
	}
	
	
	//Y	-> i--
	private boolean Y() {
		if (next("Identificateur")) {
			if (next("-")) {
				return next("-");
			}
		}
		return false;
	}

	//X	-> id++
	private boolean X() {
		if (next("Identificateur")) {
			if (next("+")) {
				return next("+");
			}
		}
		return false;
	}

	//O	-> id oprel N; | ;
	private boolean O() {
		if (next("Identificateur")) {
			if (next("Opérateur Relationnel")) {
				if (N()) {
					return next(";");
				}
			}
		}
		return next(";");
	}

	//I	-> id = N; | ;
	private boolean I() {
		if (next("Identificateur")) {
			if (next("=")) {
				if (N()) {
					return next(";");
				}
			}
		}
		return next(";");
	}

	private boolean N() {
		// TODO Auto-generated method stub
		return false;
	}

	private boolean C() {
		// TODO Auto-generated method stub
		return false;
	}

	

}
